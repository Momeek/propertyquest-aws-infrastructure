    "random-number-csprng": "^1.0.2",
    "react-calendar": "^5.0.0",
    "react-icons": "^5.2.1",
    "rimraf": "^5.0.1",
    "sequelize": "^6.37.3",
    "socket.io": "^4.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "time2fa": "^1.3.0",
    "ts-node": "^10.9.1",
