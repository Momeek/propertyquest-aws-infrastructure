{
  "name": "propertyquest",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/salihuabubakar/properQuestServer.git",
  "description": "A property management system that allows users to manage their properties, tenants, and payments.",
  "author": "Muhammad Mahmood <mmuhammadabba@gmail.com>",
  "license": "MIT",
  "scripts": {
    "// ------ DATABASE ----- //": "",
    "db:create": "npx sequelize-cli db:create",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate",
    "db:migration-file": "npx sequelize-cli migration:generate --name",
    "// ------ DEVELOPMENT ----- //": "",
    "dev": "nodemon",
    "start:all": "concurrently \"yarn dev\" \"yarn --cwd client dev\"",
    "script": "ts-node -r dotenv/config",
    "test": "jest",
    "// ------ BUILDING ----- //": "",
    "prebuild": "rimraf dist",
    "build:watch": "tsc -w",
    "build:prod": "yarn && rimraf dist && yarn db:migrate && yarn build && tsc",
    "// ------ PRODUCTION ----- //": "",
    "//-----RAILWAY-----//": "",
    "start": "yarn start:prod",
    "build": "rimraf dist && tsc",
    "migrate": "npx sequelize-cli db:migrate",
    "start:prod": "yarn migrate && node -r dotenv/config ./dist/index.js",
    "// ------ LINTING ----- //": "",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier:format": "prettier --write src/**/*.ts",
    "prettier:check": "prettier --check src/**/*.ts"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
